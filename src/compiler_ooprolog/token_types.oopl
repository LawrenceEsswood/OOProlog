class class_header_token.
	Name.
	Parents.
	class_header_token(Name, Parents).
endclass.

class class_token.
	Hdr.
	Bdy.
	class_token(Hdr, Bdy).
endclass.

class clause_token.
	Left.
	Name.
	N.
	clause_token :- functor(Left, Name, N).
endclass.

